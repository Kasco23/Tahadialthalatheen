{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "group": "build",
      "problemMatcher": [],
      "detail": "Install dependencies with pnpm"
    },
    {
      "label": "pnpm: dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "\\b__dirname",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Local:.*",
          "endsPattern": ".*ready in.*"
        }
      },
      "detail": "Start Vite development server"
    },
    {
      "label": "pnpm: build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": "build",
      "problemMatcher": "$tsc",
      "detail": "Build the project"
    },
    {
      "label": "pnpm: test",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": "test",
      "problemMatcher": [],
      "detail": "Run tests with Jest"
    },
    {
      "label": "pnpm: lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "group": "build",
      "problemMatcher": "$eslint-stylish",
      "detail": "Run ESLint"
    },
    {
      "label": "pnpm: format",
      "type": "shell",
      "command": "pnpm",
      "args": ["format"],
      "group": "build",
      "problemMatcher": [],
      "detail": "Format code with Prettier"
    },
    {
      "label": "pnpm: dev:netlify",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev:netlify"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "detail": "Start Netlify development server"
    },
    {
      "label": "pnpm: tsc",
      "type": "shell",
      "command": "pnpm",
      "args": ["tsc", "--noEmit"],
      "group": "build",
      "problemMatcher": "$tsc",
      "detail": "TypeScript type checking"
    }
  ]
}