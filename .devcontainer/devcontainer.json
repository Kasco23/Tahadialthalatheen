{
  "name": "Tahadialthalatheen",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-22-bullseye",
  "features": {
    "ghcr.io/devcontainers-contrib/features/pnpm:2": { "version": "10" },
    "ghcr.io/devcontainers/features/deno:1": { "version": "latest" }
  },
  "postCreateCommand": "corepack enable pnpm && pnpm install --frozen-lockfile && npm install -g netlify-cli supabase",
  "forwardPorts": [5173, 3000, 54321],
  "portsAttributes": {
    "5173": { "label": "Vite dev server" },
    "3000": { "label": "Netlify dev" },
    "54321": { "label": "Supabase local" }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteEnv": {
    "VITE_SUPABASE_DATABASE_URL": "${{secret:VITE_SUPABASE_DATABASE_URL}}",
    "VITE_SUPABASE_ANON_KEY": "${{secret:VITE_SUPABASE_ANON_KEY}}",
    "SUPABASE_DATABASE_URL": "${{secret:SUPABASE_DATABASE_URL}}",
    "SUPABASE_SERVICE_ROLE_KEY": "${{secret:SUPABASE_SERVICE_ROLE_KEY}}",
    "DAILY_API_KEY": "${{secret:DAILY_API_KEY}}"
  }
}
