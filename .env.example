################################################
# FRONTEND (React + Vite) – exposed to browser
# File that uses them: src/lib/supabaseClient.ts
################################################

# Supabase project REST URL (Netlify names this “DATABASE_URL”)
VITE_SUPABASE_DATABASE_URL=https://<project-ref>.supabase.co

# Supabase anon/public key (safe for frontend)
VITE_SUPABASE_ANON_KEY=<your-anon-public-key>
VITE_DAILY_DOMAIN=<your-daily-domain>


################################################
# NETLIFY FUNCTIONS (server-only, never in browser)
# Access these via process.env in netlify/functions/*.ts
################################################

# Same REST URL without VITE_ prefix
SUPABASE_DATABASE_URL=https://<project-ref>.supabase.co

# Supabase anon key (optional in server code)
SUPABASE_ANON_KEY=<your-anon-public-key>

# Supabase service-role key (⚠️ sensitive – admin privileges)
SUPABASE_SERVICE_ROLE_KEY=<your-service-role-key>

# Supabase JWT secret (rarely needed directly)
SUPABASE_JWT_SECRET=<your-jwt-secret>

# Daily.co REST API key – used by create-daily-room / token functions
DAILY_API_KEY=<your-daily-api-key>


################################################
# CODESPACES USER SECRETS (for MCP servers)
# Add in GitHub → Profile → Settings → Codespaces → User secrets
################################################

# Netlify MCP server
NETLIFY_PERSONAL_ACCESS_TOKEN=<your-netlify-pat>
NETLIFY_SITE_ID=<your-netlify-site-api-id>   # optional

# Supabase MCP server
SUPABASE_ACCESS_TOKEN=<your-supabase-pat>

# Firecrawl MCP server
FIRECRAWL_API_KEY=<your-firecrawl-api-key>

# Memory MCP server (local persistence path)
MEMORY_FILE_PATH=/workspaces/Tahadialthalatheen/memory.json


################################################
# OPTIONAL: Non-interactive Copilot MCP secrets
# Define these instead of using the input prompts
################################################
COPILOT_MCP_FIRECRAWL_API_KEY=<firecrawl-api-key>
COPILOT_MCP_NETLIFY_PERSONAL_ACCESS_TOKEN=<netlify-pat>
COPILOT_MCP_SUPABASE_ACCESS_TOKEN=<supabase-pat>
